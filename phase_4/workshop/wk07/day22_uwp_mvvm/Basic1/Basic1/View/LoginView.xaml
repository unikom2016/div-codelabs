        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <RelativePanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">
            <TextBlock Name="hello" Foreground="Blue" Text="Hello." FontSize="70" ></TextBlock>
            <TextBlock Name="wellcome" Foreground="Gray" Text="Wellcome to Twitter" FontSize="30" RelativePanel.Below="hello"></TextBlock>
        </RelativePanel>

        <RelativePanel Margin="50 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1">
            <TextBlock Name="txt1" Foreground="Gray" FontWeight="Bold" Text="Already have an account?" FontSize="14" ></TextBlock>
            <TextBox Name="username" Width="300" Height="30" RelativePanel.Below="txt1" Margin="0 20 0 0" PlaceholderText="Username or Email" FontSize="14" BorderBrush="Blue"></TextBox>
            <TextBox Name="password" RelativePanel.Below="username" Width="300" Height="30" Margin="0 20 0 0" PlaceholderText="Password" FontSize="14" BorderBrush="Blue"></TextBox>
            <TextBlock Name="forgot" RelativePanel.Below="password" Foreground="Blue" Text="Forgot Password?" FontSize="14" ></TextBlock>
            <Button Name="login" RelativePanel.Below="forgot" Margin="0 20 0 0" Width="300" Height="40" Content="Log in" FontSize="14"  Background="#59ABE3" IsEnabled="False" Foreground="White"></Button>
            <TextBlock Name="text2" Margin="0 20 0 0" RelativePanel.Below="login" Foreground="Blue" Text="New to Twitter?" FontSize="14"></TextBlock>
            <TextBlock Width="300" TextWrapping="Wrap" Name="text3"  RelativePanel.Below="text2" Foreground="Gray" Text="Sign up now to get your own personalized timeline!" FontSize="14"></TextBlock>
            <Button Name="signup" RelativePanel.Below="text3" Margin="0 20 0 0" Width="300" Height="40" Content="Sign up" FontSize="14" Foreground="White"  Background="#446CB3"></Button>
        </RelativePanel>

    </Grid>
</Page>
